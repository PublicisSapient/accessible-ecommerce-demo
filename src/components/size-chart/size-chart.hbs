<div class="size-chart">
    <button class="toggle-size-units-button" aria-live="polite">
        <span class="element-invisible">Sizes are shown in
            <span class="units-displayed">inches</span>, click to show in
            <span class="alternate-units-displayed">centimeters</span>
        </span>
        <span class="units-toggle inches selected" aria-hidden="true">Inches</span>
        <span class="units-toggle centimeters" aria-hidden="true">Centimeters</span>
    </button>
    <!-- Table START -->
    <table class="size-chart-table show-inches">
        <caption class="element-invisible">Size Chart</caption>
        <tbody>
            <tr class="index-row">
                <th scope="col">
                    <span aria-hidden="true">Size</span>
                    <span class="element-invisible">Body Areas to be Sized</span>
                </th>
                <th scope="col">
                    <span aria-hidden="true">S</span>
                    <span class="element-invisible">Small Size</span>
                </th>
                <th scope="col">
                    <span aria-hidden="true">M</span>
                    <span class="element-invisible">Medium Size</span>
                </th>
                <th scope="col">
                    <span aria-hidden="true">L</span>
                    <span class="element-invisible">Large Size</span>
                </th>
                <th scope="col">
                    <span aria-hidden="true">XL</span>
                    <span class="element-invisible">Extra Large Size</span>
                </th>
            </tr>
            <tr class="inches highlight">
                <th scope="row">
                    <span aria-hidden="true">Bust</span>
                    <span class="element-invisible">Bust size in inches</span>
                </th>
                <td aria-label="30 to 32 inches">30-32</td>
                <td aria-label="32 to 34 inches">32-34</td>
                <td aria-label="34 to 36 inches">34-36</td>
                <td aria-label="36 to 38 inches">36-38</td>
            </tr>
            <tr class="inches">
                <th scope="row">
                    <span aria-hidden="true">Waist</span>
                    <span class="element-invisible">Waist size in inches</span>
                </th>
                <td aria-label="23 to 24 inches">23-24</td>
                <td aria-label="24 to 26 inches">24-26</td>
                <td aria-label="26 to 28 inches">26-28</td>
                <td aria-label="28 to 30 inches">28-30</td>
            </tr>
            <tr class="inches highlight">
                <th scope="row">
                    <span aria-hidden="true">Hip</span>
                    <span class="element-invisible">Hip size in inches</span>
                </th>
                <td aria-label="37 to 38 inches">37-38</td>
                <td aria-label="39 to 40 inches">39-40</td>
                <td aria-label="40 to 43 inches">40-43</td>
                <td aria-label="43 to 47 inches">43-47</td>
            </tr>
            <tr class="centimeters highlight">
                <th scope="row">
                    <span aria-hidden="true">Bust</span>
                    <span class="element-invisible">Bust size in centimeters</span>
                </th>
                <td aria-label="76.2 to 81.2 centimeters">76.2-81.2</td>
                <td aria-label="81.2 to 86.36 centimeters">81.2-86.36</td>
                <td aria-label="86.36 to 91.44 centimeters">86.36-91.44</td>
                <td aria-label="91.44 to 96.52 centimeters">91.44-96.52</td>
            </tr>
            <tr class="centimeters">
                <th scope="row">
                    <span aria-hidden="true">Waist</span>
                    <span class="element-invisible">Waist size in centimeters</span>
                </th>
                <td aria-label="56.42 to 60.96 centimeters">56.42-60.96</td>
                <td aria-label="63.5 to 68.58 centimeters">63.5-68.58</td>
                <td aria-label="71.12 to 76.2 centimeters">71.12-76.2</td>
                <td aria-label="71.12 to 76.2 centimeters">71.12-76.2</td>
            </tr>
            <tr class="centimeters highlight">
                <th scope="row">
                    <span aria-hidden="true">Hip</span>
                    <span class="element-invisible">Hip size in centimeters</span>
                </th>
                <td aria-label="81.2 to 83.82 centimeters">81.2-83.82</td>
                <td aria-label="86.36 to 91.44 centimeters">86.36-91.44</td>
                <td aria-label="93.98 to 99.06 centimeters">93.98-99.06</td>
                <td aria-label="93.98 to 99.06 centimeters">93.98-99.06</td>
            </tr>
        </tbody>
    </table>
</div>
